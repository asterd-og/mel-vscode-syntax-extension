{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Mel",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#object-types"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#numerics"
		},
		{
			"include": "#identifiers"
		}
	],
	"repository": {
		"object-types": {
			"patterns": [
				{
					"name": "comment.line.double-slash",
					"match": "//.*$"
				},
				{
					"name": "comment.block",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.mel",
					"match": "\\b(if|while|import|for|ret|fn|var)\\b"
				},
				{
					"name": "keyword.mel",
					"match": "\\b(struct|packed|extern|align)\\b"
				},
				{
					"name": "keyword.type.mel",
					"match": "\\b(u64|u32|u16|u8|i64|i32|i16|i8|int|char|void)\\b"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "meta.function.mel",
					"match": "\\b(fn)\\s+([\\_a-zA-Z][\\_\\$a-zA-Z0-9]+)",
					"captures": {
						"1": {
							"name": "keyword.control.mel"
						},
						"0": {
							"name": "entity.name.function.mel"
						}
					}
				},
				{
					"name": "meta.function-call.mel",
					"match": "\\b((\\_|[a-zA-Z])([a-zA-Z0-9\\_\\$]+))\\(",
					"captures": {
						"0": {
							"name": "entity.name.function.mel"
						}
					}
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "variable.other.mel",
					"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)+\\(?\\b"
				}
			]
		},
		"numerics": {
			"name": "constant.numeric.mel",
			"patterns": [
				{
					"name": "constant.numeric.mel",
					"match": "\\b(0[b][01]+|0[x][0-9a-fA-F]+|0[oO][0-7]+|\\d+(\\.\\d+)?)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.mel",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.mel",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.mel"
}